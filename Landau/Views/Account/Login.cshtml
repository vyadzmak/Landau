@model Landau.Models.UserLoginsModel.UserLoginsModel
<head>
    <base id="myBase" href="~/">
   
</head>
@{
    ViewBag.Title = "Авторизация";
}


<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8" ng-app="RegistrationApp" ng-controller="LoginCtr">
      
        <section id="loginForm">
            <form @*action="@Request.RawUrl" method="POST"*@ name="LoginForm" class="form-horizontal" role="form" ng-model="LoginForm" id="FormLoginSubmit" @*ng-submit="submit()"*@ novalidate @*onsubmit=" return checkvalueregistration(); event.preventdefault(); "*@>

                @Html.AntiForgeryToken()
                @*<h4>Use a local ac</h4>*@

                <div class="form-group">
                    @Html.LabelFor(m => m.Login, "Email", new {@class = "col-md-2 control-label", @id = "registrationemail"})
                    <div class="col-md-10">
                        <input id="Login" name="Login" type="email" placeholder="Email" class="form-control" ng-model="user.Login" required/>


                        <span style="color: red" ng-show="submitted" hidden="true" id="spanlogin">
                            <span ng-if="LoginForm.Login.$error.required">Должно быть заполнено!!!</span>
                            <span ng-if="LoginForm.Login.$error.email">Некорректный адрес!!!</span>

                        </span>

                        @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Пароль", new {@class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        <input id="Password" name="Password" type="password" placeholder="Пароль" class="form-control" ng-model="user.Password" ng-minlength=6
                               ng-maxlength=150 required/>
                        <span style="color: red" ng-show="submitted" hidden="true" id="spanpassword">
                            <span ng-if="LoginForm.Password.$error.required">Должно быть заполнено!!!</span>
                            <span ng-if="LoginForm.Password.$error.minlength">Короткое значение!!!</span>
                            <span ng-if="LoginForm.Password.$error.maxlength">Длинное значение!!!</span>
                        </span>
                        @*@Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "registrationpassword" })*@
                    </div>
                </div>
                @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" ng-click="submitted=true" value="Войти" class="btn btn-default"/>
                    </div>
                </div>
                <div id="dvLoading" hidden="true"></div>
                <div id="mask" hidden="true"></div>

                <p>
                    @Html.ActionLink("Зарегистрируйтесь", "Register") если у вас нет аккаунта.
                </p>

                <h3 ng-if="showLink" ng-bind="auto"></h3>



            </form>
        </section>
    </div>
    @*<div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>*@
</div>
     <footer>
        <p>&copy; @DateTime.Now.Year - Landau</p>
    </footer>
